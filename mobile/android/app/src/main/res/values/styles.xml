<resources>

    <style name="Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Text.12" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.14" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.16" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.20" parent="Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.24" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.32" parent="Text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="RatingLabel" parent="Text.16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:numStars">5</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
        <item name="android:isIndicator">true</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
    </style>

    <style name="EditableRating" parent="Rating">
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="InsertPhoto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:src">@drawable/ic_insert_photo</item>
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="UploadedPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>